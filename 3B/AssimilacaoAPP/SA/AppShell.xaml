<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SA.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SA"
    Title="SA">

    <TabBar>
        <Tab Title="Início" Icon="usuario_de_perfil.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>
        <Tab Title="Rolagem" Icon="joaninha.png">
            <ShellContent ContentTemplate="{DataTemplate local:Rolagem}" />
        </Tab>
        <Tab Title="Inventário" Icon="lobo.png">
            <ShellContent ContentTemplate="{DataTemplate local:Inventario}" />
        </Tab>
        <Tab Title="Ficha" Icon="cervo.png">
            <ShellContent ContentTemplate="{DataTemplate local:Ficha}" />
        </Tab>
    </TabBar>

</Shell>
